<div class="topbar-wrapper" style="z-index: 5;">
  <div class="topbar" data-dropdown="dropdown">
    <div class="topbar-inner">
      <div class="container-fluid">
        <h3><%= link_to("Indian Schools", root_path) %></h3>
        <% if current_user %>
          <ul class="nav">
            <%= render_tab(TabConstants::HOME, root_path) %>
            <li class="dropdown <%= 'active' %>">
              <%= link_to "Students", "#", :class => "dropdown-toggle" %>
              <ul class="dropdown-menu groups">
                <li><%= link_to truncate("Test"), "#" %> </li>
              </ul>
            </li>
            <%= render_tab("States", "#") %>
          </ul>

          <ul class="nav secondary-nav">
            <li class="dropdown">
              <%= link_to(current_user.name, "#", :class => "dropdown-toggle") %>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit School Profile", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Logout", logout_path %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="nav secondary-nav">
            <%= render_tab(TabConstants::REGISTER, new_user_path) %>
            <%= render_tab(TabConstants::LOGIN, login_path) %>
          </ul>
        <% end %>
      </div>
    </div><!-- /topbar-inner -->
  </div><!-- /topbar -->
</div>